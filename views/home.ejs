<%- include("partials/header"); -%>
<h1>Home</h1>
<p><%= homeStartingContent %></p>
<% posts.forEach(post => {%>
<h2><%= post.title %></h2>
<p>
    <% if(post.content.length <= 100) { %>
            <%= post.content %>
        <% } else { %>
            <%= post.content.substring(0,99) + "..."; %>
        <% }; %>
        <a href="/posts/<%= post.title %>">Read More</a>
</p>
<% }); %>
<%- include("partials/footer"); -%>